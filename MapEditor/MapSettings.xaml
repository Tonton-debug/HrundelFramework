<Window x:Class="MapEditor.MapSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MapEditor"
        mc:Ignorable="d"
        Title="MapSetting" Height="110" Width="200" WindowStyle="SingleBorderWindow" ResizeMode="NoResize" SizeToContent="WidthAndHeight">
    <StackPanel>
        <TextBlock Text="Название карты:"/>
        <TextBox x:Name="MapNameTextBox"/>
        <TextBlock Text="Размер камеры:"/>
        <TextBox x:Name="SizeCameraTextBox"/>
        <WrapPanel Orientation="Horizontal" >
            <Button Content="Принять" Margin="0,0,10,0" Name="AcceptButton" Click="AcceptButton_Click"/>
            <Button Content="Отмена" Name="CancelButton" Click="CancelButton_Click"/>
        </WrapPanel>
    </StackPanel>
</Window>
